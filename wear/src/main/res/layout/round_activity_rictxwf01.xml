<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".watchfaces.RICTxWF01"
    tools:deviceIds="wear_round">

    <!-- background-image with shapes elements-->
    <LinearLayout
        android:id="@+id/watchface_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rictxwf01_bg_red_round"
        android:orientation="vertical"></LinearLayout>


    <!-- right side top   Date-->
    <LinearLayout
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_rt_date"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dayname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="DDD"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rt_date"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="DD"
                android:textColor="@color/light_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="MMM"
                android:textAllCaps="true"
                android:textColor="@color/light_grey"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- right side top   Clock-->
    <LinearLayout
        android:id="@+id/layout_rt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="10dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/watch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_slab_light"
            android:text="HH:MI aa"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_bold"
            android:gravity="top"
            android:text="HH"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:paddingTop="3dp"
            android:text="MI"
            android:textColor="@color/light_grey"
            android:textSize="30sp" />

    </LinearLayout>


    <!-- right side bottom-->
    <LinearLayout
        android:id="@+id/layout_rb_diag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="113dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/secondary_layout"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="+/-"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/avgdelta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="avg"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uploader_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="--%"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rig_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="--%"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tmpBasal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_weight="1.7"
                android:gravity="top|center"
                android:text="-.--U/h"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondary_layout_spacer"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal"
            android:visibility="visible" />

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="0dp"
            android:gravity="center_horizontal|top" />

    </LinearLayout>


    <!-- left side top    COB-->
    <LinearLayout
        android:id="@+id/layout_l1"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="31dp"
        android:baselineAligned="false"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cob_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/activity_carb"
            android:textColor="@color/light_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/cobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="top|center_horizontal"
            android:letterSpacing="-0.075"
            android:lines="1"
            android:text="000g"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <!-- left side center  SGV -->
    <LinearLayout
        android:id="@+id/layout_l2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="79dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="-7dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingEnd="4dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal|bottom"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="--'"
                android:textColor="@color/light_grey"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="-2dp"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="top|center_horizontal"
            android:letterSpacing="-0.05"
            android:lines="1"
            android:paddingTop="-3dp"
            android:text="00,0"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AAPSv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>


    <!-- left side center  IOB -->
    <LinearLayout
        android:id="@+id/layout_l3"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="139dp"
        android:baselineAligned="false"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iob_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/activity_IOB"
            android:textColor="@color/light_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/iobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="top|center_horizontal"
            android:letterSpacing="-0.075"
            android:lines="1"
            android:text="0,00U"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>