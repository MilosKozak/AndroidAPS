<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".watchfaces.RICTxWF01" tools:deviceIds="wear_round"
    android:background="@color/black"
    android:id="@+id/main_layout">

    <!-- background-image with shapes elements-->
    <LinearLayout
        android:id="@+id/watchface_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rictxwf01_bg_red_round"
        android:orientation="vertical">
    </LinearLayout>


    <!-- right side top-->
    <LinearLayout
        android:id="@+id/layout_rt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="115dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="10dp"
        >

            <LinearLayout
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/dayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="DDD"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="400"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/layout_rt_date"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="DD"
                        android:textColor="@color/light_grey"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:text="MMM"
                        android:textAllCaps="true"
                        android:textColor="@color/light_grey"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_rt_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="-12dp"
                >
                <LinearLayout
                    android:id="@+id/layout_rt_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/watch_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="HH"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-black"
                        android:textSize="44sp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="HH"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-black"
                        android:textSize="42sp" />
                    <TextView
                        android:id="@+id/minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="MI"
                        android:textColor="@color/light_grey"
                        android:fontFamily="sans-serif-black"
                        android:textSize="30sp" />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>



    <!-- right side bottom-->
    <LinearLayout
        android:id="@+id/layout_rb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:id="@+id/layout_rb_statusbar"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:orientation="vertical"
            android:visibility="gone"
        />

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="bottom"
            android:gravity="center_horizontal|top" />


    </LinearLayout>




    <!-- left side -->
    <LinearLayout
        android:id="@+id/layout_rb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="147dp"
        >

        <!--  COB  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="4dp"

            >

            <TextView
                android:id="@+id/cob_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/activity_carb"
                android:textSize="10sp"
                android:textColor="@color/light_grey"
                android:layout_marginBottom="-3dp"
                />

            <TextView
                android:id="@+id/cobView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="--g"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--  BG  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52.5dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/AAPSv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=""
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingEnd="4dp"
                android:layout_marginBottom="-7dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal|bottom"
                    android:text="--"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="--'"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/sgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="-2dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="-3dp"
                android:text="00.0"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <!--  IOB  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.5dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_marginTop="10.5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="4dp"
            >

            <TextView
                android:id="@+id/iob_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/activity_IOB"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textColor="@color/light_grey"
                android:layout_marginBottom="-3dp"
                />

            <TextView
                android:id="@+id/iobView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="--U"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>